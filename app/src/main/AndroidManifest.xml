<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mario.activeandroidexample" >

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="AA_MODELS"
            android:value="com.example.mario.activeandroidexample.model.Group,
                           com.example.mario.activeandroidexample.model.Player,
                           com.example.mario.activeandroidexample.model.GroupToPlayer" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="database1.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".ui.activity.TestActivity"
            android:label="@string/title_activity_main" />

        <activity
            android:name=".ui.activity.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
